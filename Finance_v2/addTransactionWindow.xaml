        <TextBlock HorizontalAlignment="Left" Margin="10,183,0,0" TextWrapping="Wrap" Text="Value:" VerticalAlignment="Top"/>
        <TextBox x:Name="valueTextBox" HorizontalAlignment="Left" Height="24" Margin="86,179,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="52"/>
        <CheckBox x:Name="incomeCheckBox" Content="Income" HorizontalAlignment="Left" Margin="143,184,0,0" VerticalAlignment="Top"/>
        <CheckBox x:Name="expenseCheckBox" Content="Expense" HorizontalAlignment="Left" Margin="207,184,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.341,0.567"/>
        <Button x:Name="submitButton" Content="Submit" HorizontalAlignment="Left" Margin="176,220,0,0" VerticalAlignment="Top" Width="76"/>
        <Button x:Name="cancelButton" Content="Cancel" HorizontalAlignment="Left" Margin="86,220,0,0" VerticalAlignment="Top" Width="76"/>

    </Grid>
</Window>
